#include<stdio.h>
#include<string.h>
int main()
{
	char c[100],word[30];
	int i=0,j,x=0,y=0,count=0,sum=0;
	printf("请输入一个句子:\n");
	while((c[i]=getchar())!='\n')
	{
		x++;
		i++;
	}
	strlwr(c);
	i=0;
	rewind(stdin);
	printf("请输入需要查询的单词:\n");
	while((word[i]=getchar())!='\n')
	{
		y++;
		i++;
	}
	strlwr(word);
	for(i=0;i<x;i++)
	{
		count=0;
		if(c[i]==word[0])
		{
			for(j=0;j<y;j++)
			{
				if(c[i+j]==word[j])
				{
					count++;
				}
			}
			if(count==y)
			sum++;
		}
	}
	printf("该单词出现次数为%d\n",sum);
	return 0;
}
